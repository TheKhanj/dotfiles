super + Return
  $TERMINAL

super + p
  dmenu_run

XF86MonBrightness{Up,Down}
  brightness {up,down}

shift + XF86MonBrightness{Up,Down}
  brightness {up,down} 1

XF86Audio{Raise,Lower}Volume
  volume {up,down}

shift + XF86Audio{Raise,Lower}Volume
  volume {up,down} 1

XF86AudioMute
  volume mute

Print
  screenshot

shift + Print
  screenrecord

super + slash
  switch_display

super + shift + t
  dmenu -p 'Translate:' < ~/bin/english_words \
    | xargs -r fastdic

super + z
  slock

super + semicolon
  dunstctl close

super + colon
  dunstctl history-pop

super + apostrophe
  dmenu_emoji

super + bracketleft
  playerctl previous

XF86AudioPrev
  playerctl previous

super + bracketright
  playerctl next

XF86AudioNext
  playerctl next

super + backslash
  playerctl play-pause

XF86AudioPlay
  playerctl play-pause
